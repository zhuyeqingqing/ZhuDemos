<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/et_prompt"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="50dp"
        android:id="@+id/rcl_edit"/>

    <EditText
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:id="@+id/et_image_num"
        android:hint="图片数"
        app:layout_constraintBottom_toBottomOf="@+id/bt_sure"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/et_size"
        android:hint="图片大小"
        app:layout_constraintLeft_toRightOf="@+id/et_image_num"
        app:layout_constraintBottom_toBottomOf="@+id/bt_sure"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />


    <EditText
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:id="@+id/et_prompt"
        android:hint="图片描述"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bt_sure"
        />

    <Button
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:id="@+id/bt_sure"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:text="发送"/>

</androidx.constraintlayout.widget.ConstraintLayout>