<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top|center_horizontal"
    android:layout_marginBottom="55dp"
    android:layout_marginTop="50dp"
    android:background="@color/common_background_color_white"
    android:clickable="true"
    android:orientation="vertical">

    <com.example.tabfragment.mylayout.ViewPagerTabBar
        android:id="@+id/viewpager_tabbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ad_banner_view"/>

    <com.example.tabfragment.mylayout.FragmentViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
